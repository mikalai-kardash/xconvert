{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [
        "--no-color"
    ],
    "tasks": [
        {
            "taskName": "cs",
            "showOutput": "silent",
            "problemMatcher": {
                "owner": "gulp",
                "fileLocation": "absolute",
                "severity": "error",
                "pattern": {
                        "regexp": "^(ERROR): ([\\w\\:\\/]+\\.ts)\\[(\\d+), (\\d+)]: ([\\w\\s]+)$",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                }
            }
        },
        {
            "taskName": "compile-source",
            "problemMatcher": {
                "base": "$tsc",
                "owner": "gulp"
            }
        },
        {
            "taskName": "compile-tests",
            "problemMatcher": {
                "base": "$tsc",
                "owner": "gulp"
            }
        },
        {
            "taskName": "compile",
            "problemMatcher": {
                "base": "$tsc",
                "owner": "gulp"
            }
        }
    ]
}